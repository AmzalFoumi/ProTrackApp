<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ui.community.CommunityFragment">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_friends_card"
        style="@style/ProTrack.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/community_top_card_margin_top"
        android:padding="@dimen/card_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <TextView
                android:id="@+id/top_friends_title"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_top_friends"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/top_friends_subtitle"
                style="@style/ProTrack.TextAppearance.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:alpha="0.7"
                android:text="@string/top_friends_subtitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/profile_image_size_large"
                        android:layout_height="@dimen/profile_image_size_large"
                        app:cardCornerRadius="@dimen/profile_image_size_large"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/profile_pic_desc"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jonathan" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_friend1_name"
                        style="@style/ProTrack.TextAppearance.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Jonathan"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_friend1_score"
                        style="@style/ProTrack.TextAppearance.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1100 pts"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="@dimen/profile_image_size_large"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/profile_pic_desc"
                            android:scaleType="centerCrop"
                            android:src="@drawable/alien_profile_pic_1" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_friend2_name"
                        style="@style/ProTrack.TextAppearance.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Amzal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_friend2_score"
                        style="@style/ProTrack.TextAppearance.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1244 pts"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="@dimen/profile_image_size_large"
                        android:layout_height="@dimen/profile_image_size_large"
                        app:cardCornerRadius="@dimen/profile_image_size_large"
                        app:cardElevation="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/profile_pic_desc"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dustin" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/text_friend3_name"
                        style="@style/ProTrack.TextAppearance.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Dustin"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_friend3_score"
                        style="@style/ProTrack.TextAppearance.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1182 pts"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:id="@+id/friends_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/top_friends_card"
        app:layout_constraintBottom_toTopOf="@id/button_add_friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/friends_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_friends_header"
                style="@style/ProTrack.TextAppearance.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friends_list_header"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    app:cardCornerRadius="@dimen/profile_image_size_small"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/alien_profile_pic_1"
                        android:contentDescription="@string/profile_pic_desc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ProTrack.TextAppearance.Headline"
                    android:text="You"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="1244"
                    android:textColor="?attr/colorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    app:cardCornerRadius="@dimen/profile_image_size_small"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dustin"
                        android:contentDescription="@string/profile_pic_desc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="Dustin"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="1182"
                    android:textColor="?attr/colorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    app:cardCornerRadius="@dimen/profile_image_size_small"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jonathan"
                        android:contentDescription="@string/profile_pic_desc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="Jonathan"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="1100"
                    android:textColor="?attr/colorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    app:cardCornerRadius="@dimen/profile_image_size_small"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/watani"
                        android:contentDescription="@string/profile_pic_desc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="Watani"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="1099"
                    android:textColor="?attr/colorSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/profile_image_size_small"
                    android:layout_height="@dimen/profile_image_size_small"
                    app:cardCornerRadius="@dimen/profile_image_size_small"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/john"
                        android:contentDescription="@string/profile_pic_desc" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="John"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ProTrack.TextAppearance.Body"
                    android:text="1050"
                    android:textColor="?attr/colorSecondary" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_friend"
        style="@style/ProTrack.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_friend_button"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


