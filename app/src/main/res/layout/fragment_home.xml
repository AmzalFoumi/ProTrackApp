<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Profile Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/alien_profile_pic_1"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>


            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greeting_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hello Alien!"
                android:textColor="?attr/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Health Icon -->
            <ImageView
                android:id="@+id/health_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher_foreground"
                 />

        </LinearLayout>

        <!-- Today's Total Steps Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/ProTrack.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Today's Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <!-- Total Steps Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total "
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Progress Circle Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp">

                    <!-- Background Circle -->
                    <View
                        android:id="@+id/progress_background"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/circle_progress_background" />

                    <!-- Progress Circle -->
                    <ProgressBar
                        android:id="@+id/steps_progress"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="10000"
                        android:progress="7495"
                        android:progressDrawable="@drawable/circle_progress_drawable" />

                    <!-- Steps Count -->
                    <!-- MODIFIED: Number centered, Steps text positioned below -->
                    <TextView
                        android:id="@+id/steps_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="7,495"
                        android:textColor="?attr/colorPrimaryVariant"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="false"
                        android:layout_marginTop="120dp"
                        android:text="Steps"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:alpha="0.7" />

<!--                    <LinearLayout-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerInParent="true"-->
<!--                        android:orientation="vertical"-->
<!--                        android:gravity="center">-->

<!--                        <TextView-->
<!--                            android:id="@+id/steps_count"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:fontFamily="sans-serif-medium"-->
<!--                            android:text="7,495"-->
<!--                            android:textColor="?attr/colorPrimary"-->
<!--                            android:textSize="24sp" />-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Steps"-->
<!--                            android:textColor="?attr/colorOnSurface"-->
<!--                            android:textSize="14sp"-->
<!--                            android:alpha="0.7" />-->

<!--                    </LinearLayout>-->

                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorPrimary"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.3" />

                <!-- Distance and Calories Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Distance Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/distance_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3,5"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="24sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" km"
                                android:textColor="?attr/colorSecondary"
                                android:textSize="16sp"
                                android:layout_marginStart="2dp"
                                android:layout_marginBottom="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Vertical Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="?attr/colorOnSurface"
                        android:layout_marginHorizontal="16dp"
                        android:alpha="0.2" />

                    <!-- Calories Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:layout_marginBottom="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/calories_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="195"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="24sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Kcal"
                                android:textColor="?attr/colorSecondary"
                                android:textSize="16sp"
                                android:layout_marginStart="2dp"
                                android:layout_marginBottom="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quote of the Day Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ProTrack.Card"
            app:cardBackgroundColor="?attr/colorTertiaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Quote Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quote_header"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Quote Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/quote_bubble_background"
                    android:padding="16dp">

                    <!-- Quote Icon/Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/alien_profile_pic_1"
                            android:scaleType="centerCrop" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quote Text -->
                    <TextView
                        android:id="@+id/quote_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="An Apple a day keeps the doctor away"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>




