                <!-- Password Section Title -->
                <TextView
                    android:id="@+id/tvPasswordSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set a password"
                    style="@style/ProTrack.TextAppearance.Headline"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="20sp" />

                <!-- Enter Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEnterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:layout_marginBottom="16dp"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEnterPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Re-enter to confirm password"
                    android:layout_marginBottom="32dp"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="?attr/colorOnSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sign Up Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
