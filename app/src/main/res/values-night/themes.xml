<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme for dark mode -->
<style name="Theme.ProtrackApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- PRIMARY COLORS (60% usage) -->
    <item name="colorPrimary">@color/primary_200</item>
    <item name="colorPrimaryVariant">@color/primary_400</item>
    <item name="colorOnPrimary">@color/on_primary_dark</item>

    <!-- SECONDARY COLORS (30% usage) -->
    <item name="colorSecondary">@color/secondary_300</item>
    <item name="colorSecondaryVariant">@color/secondary_500</item>
    <item name="colorOnSecondary">@color/on_secondary_dark</item>

    <!-- ACCENT COLORS (10% usage)-->
    <item name="colorTertiary">@color/accent_light</item>
    <item name="colorTertiaryContainer">@color/neutral_700</item>

    <!-- SURFACE & BACKGROUND -->
    <item name="android:colorBackground">@color/surface_dark</item>
    <item name="colorSurface">@color/surface_variant_dark</item>
    <item name="colorOnSurface">@color/on_surface_dark</item>
    <item name="colorOnBackground">@color/on_background_dark</item>

    <!-- ERROR HANDLING -->
    <item name="colorError">@color/error_light</item>
    <item name="colorOnError">@color/black</item>

    <!-- STATUS & NAVIGATION -->
    <item name="android:statusBarColor">@color/surface_dark</item>
    <item name="android:navigationBarColor">@color/surface_dark</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:windowLightNavigationBar">false</item>

    <!-- ADDITIONAL MATERIAL COLORS -->
    <item name="colorControlNormal">@color/neutral_400</item>
    <item name="colorControlActivated">@color/primary_300</item>
    <item name="colorControlHighlight">@color/primary_800</item>
</style>

<!-- COMPONENT STYLES FOR DARK MODE -->

<!-- Header/Title Text Style -->
<style name="ProTrack.TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textColor">@color/primary_200</item>
    <item name="android:textSize">24sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
</style>

<!-- Body Text Style -->
<style name="ProTrack.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textColor">@color/on_surface_dark</item>
    <item name="android:textSize">16sp</item>
</style>

<!-- Today's Total Style (Updated for dark mode) -->
<style name="today_s_tot">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/secondary_200</item>
    <item name="android:fontFamily">sans-serif-medium</item>
</style>

<!-- Primary Button Style -->
<style name="ProTrack.Button.Primary" parent="Widget.MaterialComponents.Button">
    <item name="backgroundTint">@color/primary_400</item>
    <item name="android:textColor">@color/on_primary_dark</item>
    <item name="cornerRadius">8dp</item>
</style>

<!-- Secondary Button Style -->
<style name="ProTrack.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="strokeColor">@color/secondary_300</item>
    <item name="android:textColor">@color/secondary_200</item>
    <item name="cornerRadius">8dp</item>
</style>

<!-- Card Style -->
<style name="ProTrack.Card" parent="Widget.MaterialComponents.CardView">
    <item name="cardBackgroundColor">@color/surface_variant_dark</item>
    <item name="cardElevation">8dp</item>
    <item name="cardCornerRadius">12dp</item>
</style>

<!-- Progress Indicator Style -->
<style name="ProTrack.ProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
    <item name="indicatorColor">@color/accent_light</item>
    <item name="trackColor">@color/neutral_700</item>
</style>
</resources>